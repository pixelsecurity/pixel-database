<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_inherit_pixel" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.pixel</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <!-- Have labor_product be an invisible field so that the compute function runs -->
                <field name="labor_product" invisible="1"/>
                <!-- 
                    Only show the labor field if the product is a service, rather
                    a consumable
                 -->
                <field name="labor_rate" widget='monetary' attrs="{'invisible': [('type', '!=', 'service')]}"/>
                <field name="custom_labor_rate"/>
            </xpath>
        </field>
    </record>

</odoo>