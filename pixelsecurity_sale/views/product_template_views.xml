<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_inherit_pixel" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.pixel</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='categ_id']" position="after">
                <field name="include_labor"/>
                <field name="labor_product" attrs="{'invisible': [('include_labor', '=', False)], 'required': [('include_labor', '=', True)]}"/>
                <field name="labor_rate" widget="monetary" attrs="{'invisible': [('include_labor', '=', False)], 'required': [('include_labor', '=', True)]}"/>
                <field name="labor_hours" attrs="{'invisible': [('include_labor', '=', False)], 'required': [('include_labor', '=', True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>